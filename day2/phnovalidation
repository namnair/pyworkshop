#check country codes also
import re
def valid(phno):
    tenregex= r'^\d{10}$'
    countryregex= r'^\+\d{1,4}\s?\d{10}$'
    if re.match(tenregex, phno):
        return f"Valid phone number: {phno} "
    elif re.match(countryregex, phno):
        return "Valid with country code"
    else:
        return "Invalid"
no = input("Enter a phone number: ")
ans = valid(no)
print(ans)
